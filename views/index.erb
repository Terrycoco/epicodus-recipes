      </th>
    </tr>
    <% @recipes.each do |r| %>
      <tr>
        <td>
          <a href="<%= r.id %>">
            <%= r.name %>
          </a>
        </td>
        <td>
          <!-- placeholder do not delete this td -->
        </td>
      </tr>
    <% end %>
