      <form class="form" action="/recipes/new" method="post">
        <td width="90%">
          <input class="form-control" type="text" name="name" placeholder="Create a Recipe" required>
        </td>
        <td width="90%">
          <button class="form-control" name="submit" type="submit">+</button>
        </td>
      </form>
    </tr>
  </table>
</div>
